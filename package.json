{
  "name": "dev-site",
  "version": "1.0.0",
  "description": "Monorepo with Next.js frontend and Nest.js backend and Prisma ORM",
  "private": true,
  "scripts": {   
    "sync:env": "node ./scripts/sync-env.js", 
    "dev": "pnpm sync:env && turbo run dev",
    "build": "pnpm sync:env && turbo run build",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:migrate:dev": "turbo run db:migrate:dev",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "generate": "turbo run generate",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^1.10.12",
    "@types/node": "^24.10.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.2.5",
    "turbo": "^2.5.8"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=22.19.0",
    "npm": ">=10.9.0"
  }
}
