{
  "name": "dev-site",
  "version": "1.0.0",
  "description": "Monorepo with Next.js frontend and Nest.js backend and Prisma ORM",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "start": "turbo run start",
    "predev": "pnpm sync:env && turbo run predev",
    "prebuild": "pnpm sync:env && turbo run prebuild",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "sync:env": "node ./scripts/sync-env.js",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "// 1": "Turbo에서 interactive 작업을 막는 것을 방지하기 위해서 직접 폴더로 들어가서 작동",
    "db:migrate:dev": "cd packages/database && pnpm run db:migrate:dev",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "db:generate": "turbo run db:generate",
    "db:studio": "turbo run db:studio",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:ui": "turbo run test:e2e:ui",
    "test:e2e:report": "turbo run test:e2e:report",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^1.10.12",
    "@types/node": "^24.10.1",
    "eslint": "^9.31.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.2.5",
    "turbo": "^2.5.8"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=22.19.0",
    "npm": ">=10.9.0"
  },
  "volta": {
    "node": "22.19.0"
  }
}
